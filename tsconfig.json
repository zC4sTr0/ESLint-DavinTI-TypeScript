{
  "compilerOptions": {
  "target": "es5",
  "module": "CommonJS",
  "lib": ["ES5"],
  "noImplicitAny": false,
  "noEmitOnError": true,
  "noImplicitReturns": true,
  "noFallthroughCasesInSwitch": true,
  "noUnusedLocals": true,
  "noImplicitThis": true,
  "sourceMap": false,
  "strict": true,
  "strictNullChecks": true,
  "removeComments": true,
  "downlevelIteration": true,
  "allowUnreachableCode": false,
  "allowUnusedLabels": false,
  "noUnusedParameters": true,
  "allowJs": true,
  "checkJs": true,
  "outDir": "dist",
},
"exclude": ["node_modules", "dist"],
"include": ["**/*.ts", "**/*.js","**/*.xml"]
}
  